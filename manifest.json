{
  "manifest_version": 3,
  "name": "Siddhanath Kriya Yoga",
  "version": "1.0.1",
  "description": "Your personal Kriya Yoga practice companion with events, teachings, and guided sessions from Yogiraj Siddhanath",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Siddhanath Kriya Yoga"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://siddhanath-feedback.cff-704.workers.dev/*",
    "https://gbxksgxezbljwlnlpkpz.supabase.co/*",
    "https://siddhanath-ashram-sangha.onrender.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["events.json", "timestamped_sacred_sayings.json", "siddhanath_yoga_marathon.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
